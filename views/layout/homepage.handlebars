{{#each posts}}

{{!-- use this div as a partial {{> partial name}} --}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{user.user_name}} on {{createdAt}}</h6>
    <p class="card-text">{{content}}</p>
    <a href="/post/{{id}}" class="card-link">Post link</a>
  </div>
</div>
{{/each}}